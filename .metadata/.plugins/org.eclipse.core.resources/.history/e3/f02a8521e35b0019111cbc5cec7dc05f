package com.ci.game.loot;

public class Item 
{
	enum ItemType {Armor, Weapon}
	
	enum ItemAttribute {SpellDamage, WeaponDamage, 
		FireResistence, Strength, Health}
	
	// Armor attributes
	private int armor;
	
	// Shared item attributes
	private int durability;
	private int qLvl; // required player lvl for equip
	private String name; // name of item
	private ItemType itemType; // type of item
	//ItemAttribute attribute1Type;
	//ItemAttribute attribute2Type;
	private int lootClass; // loot class index;
	private double chanceToDrop; // chance to drop in lootclass 
	private char rarity; // rarity of item
		
	// Weapon attributes
	private int damage;
	private char weaponType;

	// Armor item constructor
	Item (int lootClass, String itemName, int defense, int durability, int qLvl, double odds, char rarity)
	{
		this.lootClass = lootClass;
		name = itemName;
		this.armor = defense;
		this.durability = durability;
		this.qLvl = qLvl;
		itemType = ItemType.Armor;
		
	}
	
	//Weapon Item Constructor
	Item (int lootClass, String itemName, int damage, char wType, int durability, int qLvl, double odds, char rarity)
	{
		this.lootClass = lootClass;
		name = itemName;
		this.damage = damage;
		weaponType = wType;
		this.durability = durability;
		this.qLvl = qLvl;
		itemType = ItemType.Weapon;
	}
	

}
